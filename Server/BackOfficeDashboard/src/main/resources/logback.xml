<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
<!--

    &lt;!&ndash; Adjust logging level for org.springframework packages &ndash;&gt;
    <logger name="org.springframework" level="INFO" />

    &lt;!&ndash; Adjust logging level for org.hibernate.tool.schema package &ndash;&gt;
    <logger name="org.hibernate.tool.schema" level="ERROR" />
-->

    <!-- Define root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
